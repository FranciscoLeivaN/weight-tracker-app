{
  "name": "weight-tracker-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "cypress run --spec \"cypress/e2e/weightTracker.cy.js\"",
    "test:e2e:open": "cypress open",
    "test:performance": "cypress run --spec \"cypress/e2e/performance.cy.js\"",
    "test:performance:open": "cypress open --e2e --config-file cypress.config.js",
    "test:all": "npm run test:coverage && npm run test:e2e && npm run test:performance",
    "test:ci:e2e": "start-server-and-test 'npm start' http://localhost:3000 'cypress run --spec \"cypress/e2e/weightTracker.cy.js\" --browser chrome --config video=true,videoCompression=false,screenshotOnRunFailure=true'",
    "test:ci:performance": "NODE_OPTIONS=\"--dns-result-order=ipv4first\" start-server-and-test 'npm start' http://localhost:3000 'cypress run --spec \"cypress/e2e/performance.cy.js\" --browser chrome --config video=true,videoCompression=false,screenshotOnRunFailure=true,defaultCommandTimeout=45000,pageLoadTimeout=240000 --env lighthouse_port=9222,lighthouse_hostname=127.0.0.1'",
    "test:ci:all": "npm run test:coverage && npm run test:ci:e2e && npm run test:ci:performance"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.js",
      "!src/reportWebVitals.js",
      "!src/setupTests.js",
      "!src/**/*.test.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "devDependencies": {
    "cypress": "^14.5.0",
    "cypress-audit": "^1.1.0",
    "lighthouse": "^12.7.0",
    "serve": "^14.2.4",
    "start-server-and-test": "^2.0.12"
  }
}
